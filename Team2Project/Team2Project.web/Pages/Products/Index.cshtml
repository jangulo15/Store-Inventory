@page
@model Team2Project.web.Pages.Products.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Inventory</h1>

<form asp-page="/Product" method="get">
	<p>
		<input type="text" name="searchCategory" value="@Model.CurrentFilter" placeholder="Search by category...">
		<input class="btn btn-primary" type="submit" value="Filter" />
		@*<a asp-page="/Product">Back to full List</a>*@
	</p>
</form>

<p >
    <a class="btn btn-primary" asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Products) {
	<tr>
			<td>
				@Html.DisplayFor(modelItem => item.Name)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Price)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Quantity)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Category)
			</td>
			<td>
				<a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
				<a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
				<a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
			</td>
		</tr>
	}

    </tbody>
</table>
